{
  "name": "express-mongo-otp-auth-ts",
  "version": "1.0.0",
  "repository": "https://github.com/yujhenchen/express-mongo-otp-auth-ts.git",
  "author": "yujhenchen",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix src/**/*.ts",
    "start": "node -r module-alias/register dist/index.js",
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/index.ts"
  },
  "_moduleAliases": {
    "@root": "dist",
    "@config": "dist/config",
    "@constants": "dist/constants",
    "@controllers": "dist/controllers",
    "@interfaces": "dist/interfaces",
    "@middleware": "dist/middleware",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@services": "dist/services",
    "@utils": "dist/utils"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "nodemon": "^3.1.3",
    "otp-generator": "^4.0.1",
    "passport": "^0.7.0",
    "path": "^0.12.7",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.15",
    "@types/otp-generator": "^4.0.2",
    "@types/passport": "^1.0.16",
    "@types/serve-favicon": "^2.5.7",
    "eslint": "9.x",
    "globals": "^15.6.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1"
  }
}
